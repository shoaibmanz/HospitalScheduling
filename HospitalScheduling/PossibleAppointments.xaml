<Window x:Class="HospitalScheduling.PossibleAppointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalScheduling"
        mc:Ignorable="d"
        Title="PossibleAppointments" Height="450" Width="800">

    <Border Padding="40">
        <Grid>

            <StackPanel>
                <TextBlock Text="Possible Appointments" FontSize="22" FontWeight="Bold"/>

                <DataGrid Name="PossibleAppointmentsGrid" Padding="5"/>

                <Button Name="AppointmentSelected" Click="AppointmentSelected_Click"  Content="Select" Width="80" Margin="10 20 10 10"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
