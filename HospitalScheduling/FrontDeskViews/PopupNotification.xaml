<Window x:Class="SchedulingSystem.PopupNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchedulingSystem"
        mc:Ignorable="d"
        Title="PopupNotification" Height="200" Width="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <StackPanel>
            <TextBlock Foreground="#FF03AA21"><Run Text="Schedule confirmed"/><LineBreak/><Run Text="Thank you!"/></TextBlock>

            <Button Content="Go to Panel" Margin="0 20 0 0" Click="GoToPanel_Click"/>
        </StackPanel>
    </Grid>
</Window>
